sensors {
  adis16448 {
    type imu

    used true

    frame imu
    inertiaFrame world

    topic "/milan/imu/data_raw"

    acc {
      used true
      hasBias true
      biasVector {
        x 0
        y 0
        z 0
      }
      noise {
        accXVariance 0.02
        accYVariance 0.02
        accZVariance 0.02
        biasRandomWalk 8e-5
      }
    }
    gyro {
      used true
      hasBias true
      biasVector {
        x 0
        y 0
        z 0
      }
      noise {
        gyroXVariance 0.004
        gyroYVariance 0.004
        gyroZVariance 0.004
        biasRandomWalk 3e-6
      }
    }

    rotation {
      used false
      roll 0.0
      pitch 0.0
      yaw 0.0
    }
    translation {
      used false
      x 0.0
      y 0.0
      z 0.0
    }
    delay { used false }

    mestimator
    {
      name "Cauchy"
      cauchySigma2 "10"
    }
  }
  ekf {
    type pose

    used true

    frame imu
    targetFrame world
    invertInput false

    topic "/milan/msf_core/transform"

    covPosition { sigma "0.05" }
    covOrientation { sigma "0.05" }

    absoluteMeasurements true

    rotation {
      used false
      roll 0.0
      pitch 0.0
      yaw 0.0
    }
    translation {
      used false
      x 0.0
      y 0.0
      z 0.0
    }
    delay { used false }
  }
  leica {
    type position

    used true

    frame prism
    targetFrame world

    topic "/milan/leica/position"

    covPosition { sigma "0.01" }

    rotation {
      used false
      roll 0.0
      pitch 0.0
      yaw 0.0
    }
    translation {
      used true
      x 0.168
      y -0.076915
      z -0.008500
    }
    delay { used false }

    mestimator
    {
      name "Cauchy"
      cauchySigma2 "10"
    }
  }
}

model {
  Gravity {
    used false
    magnitude 9.81
  }
  frames "imu,prism,world"

  traj {
    frame imu
    referenceFrame world
    initWithPoseMeasurements true
    McSensor ekf
    splines {
      knotsPerSecond 40
      rotSplineOrder 4
      rotFittingLambda 0.0000001
      transSplineOrder 4
      transFittingLambda 0.0000001
    }
  }
}

calibrator {
  verbose true
  timeBaseSensor adis16448
  estimator {
    optimizer {
      maxIterations 150
      convergenceDeltaError 1e-6
      convergenceDeltaX 1e-6
    }
  }
}
